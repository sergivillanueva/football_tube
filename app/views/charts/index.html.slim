#curve_chart style="width:100%;height:300px;"

javascript:
  google.charts.load('current', {'packages':['corechart']});
  google.charts.setOnLoadCallback(drawChart);

  function drawChart() {
    var data = google.visualization.arrayToDataTable(#{raw @registrations});
    var options = {
      title: 'Registrations',
      curveType: 'function',
      legend: 'none'
    };

    var chart = new google.visualization.LineChart(document.getElementById('curve_chart'));

    chart.draw(data, options);
  }
