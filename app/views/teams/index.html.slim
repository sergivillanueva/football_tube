table.table
  thead
    tr
      th = "Country"
      th = "Name"
      th = "Logo"
      th = "Visits"
      th = "Created At"
      th
      th

javascript:
  $(document).ready(function() {
    $('.table').dataTable( {
      "ajax": "#{teams_path(format: :json)}",
      "columns": [
        { "data": "country", "orderable": false },
        { "data": "name" },
        { "data": "logo" },
        { "data": "visits_counter" },
        { "data": "created_at" },
        { "data": "edit_link", "orderable": false },
        { "data": "delete_link", "orderable": false }
      ],
      "pageLength": 50,
      "deferRender": true,
      "order": [4, "desc"],
      "sDom": 'lfiprtip'
    });
  });
