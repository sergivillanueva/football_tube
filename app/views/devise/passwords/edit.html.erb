<div class="form-panel width-40pc width-100pc-xs hcenter m-t-lg">
  <header><%=t(".change_password")%></header>
  <fieldset>
	<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
	  <%= f.error_notification %>

	  <%= f.input :reset_password_token, as: :hidden %>
	  <%= f.full_error :reset_password_token %>
	  <div class="form-group">
	    <div class="input-group">
	      <div class="input-group-addon"><i class="fa fa-lock"></i></div>
              <%= f.input :password, label: false, placeholder: t(".new_password"), required: true, autofocus: true, input_html: { class: "form-control" } %>
	    </div>
	  </div>
	  <div class="form-group">
	    <div class="input-group">
	      <div class="input-group-addon"><i class="fa fa-lock"></i></div>
              <%= f.input :password_confirmation, label: false, placeholder: t(".confirm_password"), required: true, autofocus: true, input_html: { class: "form-control" } %>
	    </div>
	  </div>
	  <div class="form-actions">
            <button class="btn btn-primary btn-block"><%= t(".change_password") %></button>
	  </div>
	<% end %>
  </fieldset>
</div>
