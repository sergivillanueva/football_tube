<div class="form-panel width-40pc width-100pc-xs hcenter m-t-lg">
  <header><%=t(".forgot_password")%></header>
  <fieldset>
	<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= f.error_notification %>

	  <div class="form-group">
	    <div class="input-group">
	      <div class="input-group-addon"><i class="fa fa-user"></i></div>
	      <%= f.input :email, label: false, required: true, autofocus: true, placeholder: "Email", input_html: { class: "form-control" } %>
	    </div>
	  </div>

	  <div class="form-actions">
            <button class="btn btn-primary btn-block"><%= t(".send_me_instructions") %></button>
	  </div>
	<% end %> 
  </fieldset>
</div>
