.m-b = link_to "New match", new_match_path, class: "btn btn-primary"

table.table
  thead
    tr
      th = "Home team"
      th = "Result"
      th = "Away team"
      th = "Competition"
      th = "Stage"
      th = "Playing date"
      th = "Language"
      th = "Video files"
      th = "Visits"
      th = "Plays"      
      th = "Uploaded"
      th
      th

javascript:
  $(document).ready(function() {
    $('.table').dataTable( {
      "ajax": "#{matches_path(format: :json)}",
      "columns": [
        { "data": "home_team" },
        { "data": "result", "orderable": false },
        { "data": "away_team" },
        { "data": "competition" },
        { "data": "stage" },
        { "data": "playing_date" },
        { "data": "language" },
        { "data": "videos_count" },
        { "data": "visits_counter" },
        { "data": "visualizations_counter" },
        { "data": "created_at" },
        { "data": "edit_link", "orderable": false },
        { "data": "delete_link", "orderable": false }
      ],
      "pageLength": 50,
      "deferRender": true,
      "order": [10, 'desc'],
      "sDom": 'lfiprtip'
    });
  });      
